@model IEnumerable<HRManagement.Models.Entities.LeaveRequest>

<table class="myRequests">
<thead>
    <tr>
        <th></th>
        <th>ReqId</th>
        <th>Type</th>
        <th>Dates (day/month)</th>
    </tr>
</thead>
@foreach (var item in Model)
{
    <tr>
        <td class="opIcons"><a class="actionClass" href="leave/details/@item.Id"><img src="../../Content/images/details.png" alt="Details" /></a>
             <a class="actionClass" href="leave/edit/@item.Id"><img src="../../Content/images/edit.png" alt="Edit" /></a></td>
        <td>@item.Id</td> 
        <td>@item.RequestType.Name</td>
        <td>
            @foreach (var dayRequested in item.RequestedDays)
            { 
                @dayRequested.Day.Day<text>/</text>@dayRequested.Day.Month<text>&nbsp;&nbsp;</text>
            }
        </td>
    </tr>
}
</table>